// Installation
register_activation_hook( __FILE__, 'bp_wpfbogp_install_configuration' );

function bp_wpfbogp_install_configuration() {
  $wpfbogp_set_options = array(
    'wpfbogp_admin_ids' => false, # we need to set this to prevent errors b/c of missing array index
    'wpfbogp_force_fallback' => false, # we need to set this to prevent errors b/c of missing array index
    'wpfbogp_app_id' => 'YOUR_ID',
    'wpfbogp_fallback_img' => 'YOUR_FILE_URL',
    'wpfbogp_hide_page' => true
  );

  update_site_option( 'wpfbogp', $wpfbogp_set_options );
}

// UnInstallation
register_deactivation_hook( __FILE__, 'bp_wpfbogp_uninstall_configuration' );

function bp_wpfbogp_uninstall_configuration() {
  delete_site_option( 'wpfbogp' );
}
